---
extends: default

rules:
  line-length:
    max: 120
    level: warning

  comments:
    min-spaces-from-content: 1

  indentation:
    spaces: 2
    indent-sequences: true

  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']

  document-start: disable

  comments-indentation: disable

  braces:
    max-spaces-inside: 1

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
